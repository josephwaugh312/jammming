/* src/components/App/App.css */
body {
  background-color: #121212;
  color: white;
}

.app-container {
  min-height: 100vh;
  padding: 2rem;
}

.app-content {
  max-width: 1200px;
  margin: 0 auto;
}

.app-title {
  font-size: 2.5rem;
  font-weight: bold;
  text-align: center;
  margin-bottom: 2rem;
  color: #00E5FF;
}

.search-container {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
  margin-top: 2rem;
}

@media (min-width: 768px) {
  .search-container {
    grid-template-columns: 1fr 1fr;
  }
}

.component-container {
  background-color: #1E1E1E;
  border-radius: 0.5rem;
  padding: 1.5rem;
  border: 1px solid #333333;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.search-form {
  display: flex;
  gap: 1rem;
}

.search-input {
  flex-grow: 1;
  padding: 0.5rem 1rem;
  background-color: #2A2A2A;
  border: 1px solid #444444;
  border-radius: 0.25rem;
  color: white;
}

.search-input:focus {
  outline: none;
  border-color: #00E5FF;
}

.btn {
  padding: 0.5rem 1.5rem;
  border-radius: 0.25rem;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  transition: background-color 0.2s;
}

.btn-primary {
  background-color: #00E5FF;
  color: black;
}

.btn-primary:hover {
  background-color: #2979FF;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.track-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background-color: #252525;
  border-radius: 0.25rem;
  margin-bottom: 0.5rem;
  border: 1px solid #333333;
  transition: background-color 0.2s;
}

.track-container:hover {
  background-color: #333333;
}

.track-info h3 {
  font-weight: 600;
  margin: 0;
}

.track-info p {
  color: #B3B3B3;
  margin: 0.25rem 0 0;
}

.track-button {
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  background-color: #2A2A2A;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.track-button:hover {
  background-color: #00E5FF;
  color: black;
}

.playlist-name {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 1rem;
  background-color: transparent;
  border: none;
  border-bottom: 1px solid #444444;
  color: white;
  width: 100%;
}

.playlist-name:focus {
  outline: none;
  border-color: #00E5FF;
}

.save-button {
  margin-top: 1rem;
  width: 100%;
  padding: 0.75rem;
  background-color: #00E5FF;
  color: black;
  font-weight: 500;
  border-radius: 0.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  cursor: pointer;
  transition: background-color 0.2s;
}

.save-button:hover {
  background-color: #2979FF;
}

.save-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.component-title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #00E5FF;
}

/* Login styles */
.login-container {
  min-height: 100vh;
  background-color: #121212;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
}

.login-card {
  max-width: 450px;
  width: 100%;
  background-color: #1E1E1E;
  border-radius: 0.5rem;
  padding: 2rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  border: 1px solid #333333;
}

.login-title {
  font-size: 1.75rem;
  font-weight: bold;
  text-align: center;
  color: #00E5FF;
  margin-bottom: 1.5rem;
}

.login-subtitle {
  color: #B3B3B3;
  text-align: center;
  margin-bottom: 2rem;
}

.spotify-login-button {
  width: 100%;
  padding: 0.75rem;
  background-color: #1DB954; /* Spotify green */
  color: white;
  font-weight: 600;
  border-radius: 0.25rem;
  cursor: pointer;
  transition: background-color 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.spotify-login-button:hover {
  background-color: #1AA34A;
}

/* Error message */
.error-message {
  color: #ff4d4d;
  font-size: 0.875rem;
  margin: 0.5rem 0 1rem;
}